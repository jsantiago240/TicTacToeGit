<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_width="344dp"
        android:layout_height="495dp"
        android:visibility="visible">

        <Button
            android:id="@+id/singleButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/twoButton"
            android:layout_centerHorizontal="true"
            android:onClick="singlePlayerButtonClicked"
            android:text="Single Player"
            android:visibility="visible" />

        <Button
            android:id="@+id/twoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/singleButton"
            android:layout_alignLeft="@+id/singleButton"
            android:layout_alignRight="@+id/singleButton"
            android:layout_alignStart="@+id/singleButton"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="twoPlayerButtonClicked"
            android:text="Two Player"
            android:visibility="visible" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:hint="Enter name and select game"
            android:inputType="textPersonName" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>